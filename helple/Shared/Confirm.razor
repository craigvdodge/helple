<div>
    <table>
        <tr><td colspan=3>@Message</td></tr>
        <tr><td colspan=3><div style="padding: 10px"></div></td></tr>
        <tr><td style="text-align: left"><button @onclick="OK">OK</button></td>
            <td><div style="padding: 10px"></div></td>
            <td style="text-align: right"><button @onclick="Cancel">Cancel</button></td>
        </tr>
    </table>
</div>

@code {
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; } = default!;

    public Confirm()
    {
        if (Message is null)
        {
            Message = string.Empty;
        }
    }

    [Parameter]
    public string Message { get; set; }

    void OK()
    {
        ModalInstance.CloseAsync(ModalResult.Ok(string.Empty));
    }

    void Cancel()
    {
        ModalInstance.CancelAsync();
    }


}
